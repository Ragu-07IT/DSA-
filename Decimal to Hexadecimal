#include<stdio.h>
#include<string.h>

void reverse(char str[]){
    int len=strlen(str);
    char temp;

    for(int i=0;i<len/2;i++){
        temp=str[i];
        str[i]=str[len-i-1];
        str[len-i-1]=temp;
    }
}

int main(){
    int n;
    printf("Enter The Decimal Number:");
    scanf("%i",&n);
    char hexa[100]="";
    int temp=n;

    while(temp!=0){
        int rem=temp%16;
        char str[2];
        if(rem>=0 && rem<=9){
            sprintf(str,"%i",rem);
        }
        else if(rem==10){
            str[0]='A';
        }
        else if(rem==11){
            str[0]='B';
        }
        else if(rem==12){
            str[0]='C';
        }
        else if(rem==13){
            str[0]='D';
        }
        else if(rem==14){
            str[0]='E';
        }
        else{
            str[0]='F';
        }
        str[1]='\0';
        strcat(hexa,str);
        temp/=16;
    }
    reverse(hexa);
    printf("The Hexadecimal of %i is %s",n,hexa);
    return 0;
}
